@model Room
<div class="well">
    
    <h3>
        <strong>Room Number № @Model.RoomID</strong>
        <span class="pull-right labele label-primary">
            @Model.Price.ToString("c")
        </span>
    </h3>

    <form id=" @Model.RoomID" asp-controller="Room" method="post">
        <input type="hidden" asp-for="RoomID" />
        <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
        <span class="lead">
            @Model.Category
            <button type="submit" class="btn btn-success btn-sm pull-right" asp-action="ConfirmDeleteRoom">
                Удалить
            </button>
            <button type="submit" class="btn btn-success btn-sm pull-right" asp-action="EditRoom">
                Редактировать
            </button>
        </span>
        <div>
            @Model.Comments
        </div>
    </form>


</div>