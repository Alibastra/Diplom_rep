@model Customer

<div class="well">
    <table class="table">
        <tbody>
            <tr>
                <td width="3%"><h3>@Model.CustomerID</h3></td>
                <td width="60%">
                    <h3>
                        <strong>@Model.FirstName @Model.LastName</strong>
                    </h3>
                </td>
                <td width="20%" align="right" colspan="2">
                    <h3>
                        @Model.BithDate.ToString("dd.MM.yyyy")
                    </h3>
                </td>
            </tr>
            <tr>
                <td valign="bottom" border="0" colspan="2">
                    @Model.Email
                    </br>
                    @Model.PhoneNumber
                </td>
                <td>
                    <form id=" @Model.CustomerID" asp-controller="Customer" method="post">
                        <input type="hidden" asp-for="CustomerID" />
                        <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
                        <button type="submit" class="btn btn-success btn-sm pull-right" asp-action="EditCustomer">
                            Редактировать
                        </button>
                    </form>
                </td>
                <td>
                    <form id=" @Model.CustomerID" asp-controller="Customer" method="post">
                        <input type="hidden" asp-for="CustomerID" />
                        <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
                        <button type="submit" class="btn btn-danger btn-sm pull-right" asp-action="ConfirmDeleteCustomer">
                            Удалить
                        </button>
                    </form>
                </td>
            </tr>
        </tbody>
    </table>
</div>