<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <title>@ViewBag.Title</title>
    <style>
        .input-validation-error {
            border-color: red;
            background-color: #fee;
        }
    </style>

</head>

<body>
    <div class="navbar navbar-inverse" role="navigation" width="100%">
        <table border="0" width="100%">
            <tr>
                <td>
                    <a class="navbar-brand" href="/">ГОСТИНИЦА РАЗВИТИЕ</a>
                </td>
                <td align="right"> <font color="white" size="5px">@DateTime.Now.ToString("dd.MM.yyyy")</font></td>
            </tr>
            <tr>
                <td colspan="2">
                    @await Component.InvokeAsync("NavigationPanel")
                </td>
            </tr>
        </table>
    </div>
      @RenderBody()
</body>
</html>
