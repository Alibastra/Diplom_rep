@model DeleteRoomViewModel

<div class="modal-content">
    <div class="modal-header">
        <form asp-action="DeletRoom" method="post">
            <button class="close" data-dismiss="modal" area-hidden="true" href="@Model.ReturnUrl">X</button>
        </form>
        <h4>Удалить комнату № @Model.Room.RoomID? </h4>

    </div>
    <div class="modal-body">
        <form asp-action="UpdateRoom" method="post">
            <input type="hidden" asp-for="Room.RoomID">
            <div class="form-group">
                <label asp-for="Room.Category"></label>
                <input asp-for="Room.Category" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="Room.Quantity">Number of places:</label>
                <input asp-for="Room.Quantity" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="Room.Price">Price:</label>
                <input asp-for="Room.Price" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label>comments:</label>
                <textarea asp-for="Room.Comments" class="form-control" readonly></textarea>
            </div>
            <div class="checkbox">
                <label>
                    <input asp-for="Room.State" disabled /> rent is rent
                </label>
            </div>
            <div class="text-center">
                <button class="btn btn-primary" type="submit" asp-action="DeleteRoom">Удалить</button>
                <a class="btn btn-primary" href="@Model.ReturnUrl">Отмена</a>
            </div>
        </form>
    </div>
</div>

