@model CustomerViewModel
@{
    ViewBag.Title = "Удалить комнату";
}

<div class="modal-dialog">
    <div class="modal-header">
        <h4>Удалить гостя @Model.Customer.FirstName @Model.Customer.LastName? </h4>
    </div>
    <div class="modal-body">
        <form asp-action="DeleteCustomer" method="post">
            <input type="hidden" asp-for="Customer.CustomerID">
            <div class="form-group">
                <label asp-for="Customer.FirstName">Имя:</label>
                <input asp-for="Customer.FirstName" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="Customer.LastName">Фамилия:</label>
                <input asp-for="Customer.LastName" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="Customer.BithDate">Дата рождения:</label>
                <input asp-for="Customer.BithDate" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="Customer.Email">Почта:</label>
                <input asp-for="Customer.Email" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="Customer.PhoneNumber">Номер телефона:</label>
                <input asp-for="Customer.PhoneNumber" class="form-control" readonly />
            </div>
            <div class="text-center">
                <button class="btn btn-primary" type="submit">Удалить</button>
                <a href="@Model.ReturnUrl" class="btn btn-primary">Отмена</a>
            </div>
        </form>
    </div>
</div>