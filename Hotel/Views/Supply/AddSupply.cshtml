@model SupplyViewModel
@{
    ViewBag.Title = "Предоставление услуги";
}
<div class="modal-dialog">
    <h2>Пожалуйста, заполните данные</h2>

    <form asp-action="InsertSupply" method="post">
        <input type="hidden" name="returnUrl" value="@Model.ReturnUrl" />
        <input type="hidden" name="checkInID" value="@Model.CheckInID" />
        <input type="hidden" name="serviceID" value="@Model.ServiceID" />
        <div class="form-group">
            <label asp-for="Supply.ServiceID">Код услуги:</label>
            <input asp-for="Supply.ServiceID" class="form-control" readonly />
        </div>
        <div>
            <table width="100%">
                <tr>
                    <th>Категория</th>
                    <th>Название услуги</th>
                    <th>Цена</th>
                </tr>
                <tr>
                    <td>@Model.Service.Category</td>
                    <td>@Model.Service.ServiceName</td>
                    <td>@Model.Service.Price</td>
                </tr>
                <tr>
                    <td><b>Коментарий:</b></td>
                    <td colspan="2">@Model.Service.Comments</td>
                </tr>
            </table>
        </div>
        <div class="form-group">
            <label asp-for="Supply.SupplyDate">Дата оказания услуги:</label>
            <input asp-for="Supply.SupplyDate" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Supply.Quantity">Количество:</label>
            <input asp-for="Supply.Quantity" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Supply.CheckInID">Номер брони:</label>
            <input asp-for="Supply.CheckInID" class="form-control"  readonly  />
        </div>
        <div class="text-center">
            <button class="btn btn-primary" type="submit">Сохранить</button>
            <a href="@Model.ReturnUrl" class="btn btn-primary">Отмена</a>
        </div>
    </form>
</div>