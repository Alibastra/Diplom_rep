@model Room
@{
    ViewBag.Title = "Edit Room";
}
<h2>EditRoom</h2>
<p>Please edit details for Room № @Model.RoomID</p>

<form asp-action="UpdateRoom" method="post">
    <input type="hidden" asp-for="RoomID" />
    <input type="hidden" name="returnUrl" value="@ViewBag.ReturnUrl" />
    <div class="form-group">
        <label asp-for="Category"></label>
        <div><span asp-validation-for="Category" class="text-danger"></span></div>
        <select asp-for="Category" class="form-control">
            <option>Choose an option</option>
            <option value="Luxe">Luxe</option>
            <option value="Standart">Standart</option>
            <option value="Econom">Econom</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Quantity">Number of places:</label>
        <div><span asp-validation-for="Quantity" class="text-danger"></span></div>
        <input asp-for="Quantity" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Price">Price:</label>
        <div><span asp-validation-for="Price" class="text-danger"></span></div>
        <input asp-for="Price" class="form-control" />
    </div>
    <div class="form-group">
        <label>comments:</label>
        <textarea asp-for="Comments" class="form-control"></textarea>
    </div>
    <div class="checkbox">
        <label>
            <input asp-for="State" /> rent is rent
        </label>
    </div>
    <div class="text-center">
        <button class="btn btn-primary" type="submit" asp-action="UpdateRoom">Save</button>
        <a asp-action="List" class="btn btn-primary">Cancel</a>
    </div>
</form>
