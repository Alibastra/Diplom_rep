@model RoomViewModel
@{
    ViewBag.Title = "Добавить комнату";
}
<div class="modal-dialog">
    @if (TempData["message"] != null)
    {
        <div class="alert alert-danger">@TempData["message"]</div>
    }
    <h2>Добавить комнату</h2>
    <p>Пожалуйста, заполните данные!</p>
    <form asp-action="AddRoom" method="post">
        <input type="hidden" name="returnUrl" value="@Model.ReturnUrl" />
        <div class="form-group">
            <label>Номер комнаты:</label>
            <div><span asp-validation-for="Room.RoomID" class="text-danger"></span></div>
            <input asp-for="Room.RoomID" class="form-control" />
        </div>
        <div class="form-group">
            <label>Категория:</label>
            <div><span asp-validation-for="Room.Category" class="text-danger"></span></div>
            <select asp-for="Room.Category" class="form-control">
                <option selected disabled value="">Выберите категорию</option>
                <option value="Luxe">Luxe</option>
                <option value="Standart">Standart</option>
                <option value="Econom">Econom</option>
            </select>
        </div>
        <div class="form-group">
            <label>Количество мест:</label>
            <div><span asp-validation-for="Room.Quantity" class="text-danger"></span></div>
            <input asp-for="Room.Quantity" class="form-control" />
        </div>
        <div class="form-group">
            <label>Цена:</label>
            <div><span asp-validation-for="Room.Price" class="text-danger"></span></div>
            <input asp-for="Room.Price" class="form-control" />
        </div>
        <div class="form-group">
            <label>Коментарии:</label>
            <input asp-for="Room.Comments" class="form-control" />
        </div>
        <div class="checkbox">
            <label>
                <input asp-for="Room.State" /> Сдается
            </label>
        </div>
        <div class="text-center">
            <input class="btn btn-primary" type="submit" value="Создать" asp-action="InsertRoom" />
            <a class="btn btn-primary" type="submit" href="@Model.ReturnUrl">Отмена</a>
        </div>
    </form>
</div>