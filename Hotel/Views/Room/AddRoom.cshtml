@model Room
@{
    ViewBag.Title = "Add Room";
}
    <h2>Add Room</h2>
    <p>Please enter details!</p>
    <form asp-action="AddRoom" method="post">
        <div class="form-group">
            <label>Room Number:</label>
            <div><span asp-validation-for="RoomID" class="text-danger"></span></div>
            <input asp-for="RoomID" class="form-control" />
        </div>
        <div class="form-group">
            <label>Category:</label>
            <div><span asp-validation-for="Category" class="text-danger"></span></div>
            <select asp-for="Category" class="form-control">
                <option>Choose an option</option>
                <option value="Luxe">Luxe</option>
                <option value="Standart">Standart</option>
                <option value="Econom">Econom</option>
            </select>
        </div>
        <div class="form-group">
            <label>Number of places:</label>
            <div><span asp-validation-for="Quantity" class="text-danger"></span></div>
            <input asp-for="Quantity" class="form-control" />
        </div>
        <div class="form-group">
            <label>Price:</label>
            <div><span asp-validation-for="Price" class="text-danger"></span></div>
            <input asp-for="Price" class="form-control" />
        </div>
        <div class="form-group">
            <label>Comments:</label>
            <input asp-for="Comments" class="form-control" />
        </div>
        <div class="checkbox">
            <label>
                <input asp-for="State" /> Rent is rent
            </label>
        </div>
        <div class="text-center">
            <input class="btn btn-primary" type="submit" value="Save" asp-action="InsertRoom" />
            <a asp-action="List" class="btn btn-primary" type="submit">Cancel</a>
        </div>
    </form>

