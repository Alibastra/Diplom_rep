@model RoomViewModel
@{
    ViewBag.Title = "Add Room";
}
    <h2>Add Room</h2>
    <p>Please enter details!</p>
    <form asp-action="AddRoom" method="post">
        <div class="form-group">
            <label>Room Number:</label>
            <div><span asp-validation-for="Room.RoomID" class="text-danger"></span></div>
            <input asp-for="Room.RoomID" class="form-control" />
        </div>
        <div class="form-group">
            <label>Category:</label>
            <div><span asp-validation-for="Room.Category" class="text-danger"></span></div>
            <select asp-for="Room.Category" class="form-control">
                <option selected disabled value="">Choose an option</option>
                <option value="Luxe">Luxe</option>
                <option value="Standart">Standart</option>
                <option value="Econom">Econom</option>
            </select>
        </div>
        <div class="form-group">
            <label>Number of places:</label>
            <div><span asp-validation-for="Room.Quantity" class="text-danger"></span></div>
            <input asp-for="Room.Quantity" class="form-control" />
        </div>
        <div class="form-group">
            <label>Price:</label>
            <div><span asp-validation-for="Room.Price" class="text-danger"></span></div>
            <input asp-for="Room.Price" class="form-control" />
        </div>
        <div class="form-group">
            <label>Comments:</label>
            <input asp-for="Room.Comments" class="form-control" />
        </div>
        <div class="checkbox">
            <label>
                <input asp-for="Room.State" /> Rent is rent
            </label>
        </div>
        <div class="text-center">
            <input class="btn btn-primary" type="submit" value="Save" asp-action="InsertRoom" />
            <a href="@Model.ReturnUrl" class="btn btn-primary" type="submit">Cancel</a>
        </div>
    </form>
