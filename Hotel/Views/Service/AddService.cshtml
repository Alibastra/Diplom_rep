@model ServiceViewModel
@{
    ViewBag.Title = "Добавить услугу";
}
<div class="modal-dialog">
    <h2>Добавить услугу</h2>
    <p>Пожалуйста, заполните данные!</p>
    <form asp-action="AddService" method="post">
        <div class="form-group">
            <label>Категория:</label>
            <div><span asp-validation-for="Service.Category" class="text-danger"></span></div>
            <select asp-for="Service.Category" class="form-control">
                <option selected disabled value="">Выберите вид услуги</option>
                <option value="Основные">Основные</option>
                <option value="Дополнительные">Дополнительные</option>
                <option value="Индивидуальные">Индивидуальные</option>
            </select>
        </div>
        <div class="form-group">
            <label>Название услуги:</label>
            <div><span asp-validation-for="Service.ServiceName" class="text-danger"></span></div>
            <input asp-for="Service.ServiceName" class="form-control" />
        </div>
        <div class="form-group">
            <label>Цена:</label>
            <div><span asp-validation-for="Service.Price" class="text-danger"></span></div>
            <input asp-for="Service.Price" class="form-control" />
        </div>
        <div class="form-group">
            <label>Коментарии:</label>
            <input asp-for="Service.Comments" class="form-control" />
        </div>
        <div class="checkbox">
            <label>
                <input asp-for="Service.State" /> Услуга оказывается
            </label>
        </div>
        <div class="text-center">
            <input class="btn btn-primary" type="submit" value="Добавить" asp-action="InsertService" />
            <a class="btn btn-primary" type="submit" href="@Model.ReturnUrl">Отмена</a>
        </div>
    </form>
</div>