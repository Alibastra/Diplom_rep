@model CustomerViewModel
@{
    ViewBag.Title = "Редактировать данные клиента";
}
<div class="modal-dialog">
    <h4>Редактировать данные клиента</h4>
    <p> гостя @Model.Customer.FirstName @Model.Customer.LastName? </p>
    <form asp-action="UpdateCustomer" method="post">
        <input type="hidden" asp-for="Customer.CustomerID" />
        <input type="hidden" name="returnUrl" value="@Model.ReturnUrl" />
        <div class="form-group">
            <label asp-for="Customer.FirstName">Имя:</label>
            <div><span asp-validation-for="Customer.FirstName" class="text-danger"></span></div>
            <input asp-for="Customer.FirstName" class="form-control"  />
        </div>
        <div class="form-group">
            <label asp-for="Customer.LastName">Фамилия:</label>
            <div><span asp-validation-for="Customer.LastName" class="text-danger"></span></div>
            <input asp-for="Customer.LastName" class="form-control"  />
        </div>
        <div class="form-group">
            <label asp-for="Customer.BithDate">Дата рождения:</label>
            <div><span asp-validation-for="Customer.BithDate" class="text-danger"></span></div>
            <input asp-for="Customer.BithDate" class="form-control"  />
        </div>
        <div class="form-group">
            <label asp-for="Customer.Email">Почта:</label>
            <div><span asp-validation-for="Customer.Email" class="text-danger"></span></div>
            <input asp-for="Customer.Email" class="form-control"  />
        </div>
        <div class="form-group">
            <label asp-for="Customer.PhoneNumber">Номер телефона:</label>
            <input asp-for="Customer.PhoneNumber" class="form-control"  />
        </div>
        <div class="text-center">
            <button class="btn btn-primary" type="submit">Сохранить</button>
            <a href="@Model.ReturnUrl" class="btn btn-primary">Отмена</a>
        </div>
    </form>
</div>