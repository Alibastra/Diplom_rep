@model CheckInViewModel
@{
    ViewBag.Title = "Добавить комнату";
}
<div class="modal-dialog">
    @if (TempData["message"] != null)
    {
        <div class="alert alert-danger">@TempData["message"]</div>
    }
    <h2>Добавить бронирование</h2>
    <p>Пожалуйста, заполните данные!</p>
    <form asp-action="AddCheckIn" method="post">
        <input type="hidden" name="returnUrl" value="@Model.ReturnUrl" />
        <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
        <div class="form-group">
            <label asp-for="CheckIn.RoomID">Номер комнаты:</label>
            <input asp-for="CheckIn.RoomID" class="form-control" readonly />
        </div>
     <div>
         <table width="100%">
                <tr>
                    <th>Категория</th>
                    <th>Кол-во мест</th>
                    <th>Цена</th>
                </tr>
                <tr>
                    <td>@Model.Room.Category</td>
                    <td>@Model.Room.Quantity</td>
                    <td>@Model.Room.Price</td>
                </tr>
            </table>
        </div>
     <div class="form-group">
         <label asp-for="CheckIn.Arrival">Дата заселения:</label>
         <input asp-for="CheckIn.Arrival" class="form-control" readonly />
     </div>
     <div class="form-group">
         <label asp-for="CheckIn.Department">Дата выезда:</label>
         <input asp-for="CheckIn.Department" class="form-control" readonly />
     </div>

     <div class="form-group">
         @*<table >
             <tr colspan="2"><label>Клиент</label></tr>
             <tr>
                 <td>
                     <input asp-for="CheckIn.LastName" class="form-control" />
                 </td>
                 <td>
                     <button>Выбрать из базы</button>
                 </td>
             </tr>
         </table>*@
         <label>Клиент</label>
         <input asp-for="CheckIn.LastName" class="form-control"/>
     </div>
        <div class="text-center">
            <input class="btn btn-primary" type="submit" value="Добавить" asp-action="InsertCheckIn" />
            <a class="btn btn-primary" type="submit" href="@Model.ReturnUrl">Отмена</a>
        </div>
    </form>
</div>