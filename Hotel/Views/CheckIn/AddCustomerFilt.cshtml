@model CheckInsListViewModel
@{
    ViewBag.Title = "Добавить клиента";
}
<div class="row panel">
    <div class="col-xs-2">
        @await Component.InvokeAsync("NavigationMenuAddCustomer")
    </div>

    <div class="col-xs-8">
        <input type="hidden" name="returnUrl" value="@Model.ReturnUrl" />
        @if (TempData["message"] != null)
        {
            <div class="alert alert-success">@TempData["message"]</div>
        }
            <div class="text-right">
                <form asp-action="AddCustomer" asp-controller="CheckIn" method="post">
                    <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
                    <button type="submit" class="btn btn-success btn-sm pull-right">
                        +Добавить комнату
                    </button>
                </form>
                <a class="btn btn-primary" type="submit" asp-controller="CheckIn" asp-action="List">Отмена</a>
            </div>
        <table class="table">
            <thead>
                <tr>
                    <th>Код</th>
                    <th>Имя</th>
                    <th>Фамилия</th>
                    <th>Дата рождения</th>
                    <th>Почта</th>
                    <th>Номер телефона</th>
                </tr>
            </thead>
        </table>

        @foreach (var customer in Model.Customers)
        {
            <form asp-controller="Customer" asp-action="AddCustomer" method="post">
                <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
                @*<input type="hidden" name="roomID" value="@room.RoomID" />
                <input type="hidden" name="arrival" value="@Model.Arrival" />
                <input type="hidden" name="department" value="@Model.Department" />*@
                <button type="submit" class=" btn-light btn-block">
                    <div class="well">
                        <table width="100%">
                            <tr>
                                <td width="15%" align="left">
                                    @customer.CustomerID
                                </td>
                                <td width="15%" align="left">
                                    @customer.FirstName
                                </td>
                                <td width="45%" align="left">
                                    @customer.LastName
                                </td>
                                <td width="10%" align="center">
                                    @customer.BithDate
                                </td>
                                <td width="15%" align="right">
                                    Почта @customer.Email
                                </td>
                                <td width="15%" align="right">
                                    Номер :@customer.PhoneNumber
                                </td>
                            </tr>
                        </table>
                    </div>
                </button>
            </form>
        }
        <div page-model="@Model.PagingInfo" page-action="AddCheckInFilt"
             page-classes-enabled="true"
             page-class="btn" page-class-normal="btn-default"
             page-class-selected="btn-primary" page-url-category="@Model.Category" class="btn-group pull-right-right">
        </div>
    </div>
</div>